<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kdc.reef.john.reefcaluclators.ViewAlertActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Name"
        android:textSize="25sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Time:"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--a.m."
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:text="Edit"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Date:"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--/--/----"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/button8"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:text="Edit"
        android:textSize="10sp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeats:"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        android:text="WED"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton5"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginTop="11dp"
        android:text="FRI"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3"
        tools:layout_editor_absoluteX="77dp" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:text="SAT"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton6"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton5" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:text="FRI"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton8"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton4" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:text="MON"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton3"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:text="TUES"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton4"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="28dp"
        android:text="SUN"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

</android.support.constraint.ConstraintLayout>
