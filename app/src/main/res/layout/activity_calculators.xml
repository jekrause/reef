<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="#7BB0ED"
    android:paddingTop="0dp"
    tools:context="kdc.reef.john.reefcaluclators.Calculators">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculators"
        android:textSize="50sp"
        android:textColor="#555555"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tank Volume"
        android:id="@+id/tankVolumeButton"
        android:onClick="tankVolumeButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_light"
        android:textColor="#555555"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Part Dosing"
        android:id="@+id/partDosingButton"
        android:onClick="twoPartDosing"
        android:layout_below="@+id/tankVolumeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_light"
        android:textColor="#555555"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partDosingButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Alkalinity"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:onClick="alkalinityClick"
            android:id="@+id/alkalinityButton"
            android:textColor="#555555"/>
        <Button
            android:layout_width="0dp"
            android:background="@android:color/holo_blue_light"
            android:layout_height="match_parent"
            android:text="Calcium"
            android:layout_weight="1"
            android:onClick="calciumClick"
            android:id="@+id/calciumButton"
            android:textColor="#555555"/>

    </LinearLayout>
</RelativeLayout>
